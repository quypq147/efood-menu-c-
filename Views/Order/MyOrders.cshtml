@model IEnumerable<Efood_Menu.Models.Order>
@{
    ViewData["Title"] = "Lịch sử đặt món";
}

<h2>Lịch sử đặt món</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.TotalAmount.ToString("N0") ₫</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Xem</a>
                </td>
            </tr>
        }
    </tbody>
</table>
