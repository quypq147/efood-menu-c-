<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin | eFood Menu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <style>
        body {
            background: #232131;
            color: #fff;
        }
        .main-content {
            background: #232131;
            color: #fff;
        }
        .admin-header {
            background: #1F1D2B;
            color: #fff;
            border-bottom: 1px solid #393C49;
            border-radius: 0 0 1.25rem 1.25rem;
        }
        .sidebar-modern {
            background: #1F1D2B;
            color: #fff;
        }
        .sidebar-logo .logo-text {
            color: #FF9671;
        }
        .text-accent {
            color: #FF9671 !important;
        }
        .btn-accent {
            background: #FF9671;
            color: #fff;
            border: none;
        }
        .btn-accent:hover {
            background: #ff6b6b;
            color: #fff;
        }
        .card, .bg-dark-admin {
            background: #232131 !important;
            color: #fff;
        }
        .table-dark-admin {
            background: transparent;
            color: #fff;
        }
        .table-dark-admin thead th {
            background: #1F1D2B;
            color: #fff;
            border-bottom: 1px solid #393C49;
        }
        .table-dark-admin tbody tr {
            background: #232131;
            color: #fff;
            border-bottom: 1px solid #393C49;
        }
        .form-control, .form-select {
            background: #232131;
            color: #fff;
            border: 1px solid #393C49;
        }
        .form-control:focus, .form-select:focus {
            background: #232131;
            color: #fff;
            border-color: #FF9671;
            box-shadow: 0 0 0 0.2rem rgba(255,150,113,.15);
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar-modern">
            <div class="sidebar-logo">
                <div class="icon-box-bg">
                    <svg width="35" height="35" fill="none" stroke="#FF9671" stroke-width="2" viewBox="0 0 24 24">
                        <circle cx="12" cy="8" r="4" />
                        <path d="M4 20c0-2.2 3.6-4 8-4s8 1.8 8 4" />
                    </svg>
                </div>
                <span class="logo-text">eFood Admin</span>
            </div>
            <ul class="sidebar-menu">
                <li class="side-menu-item">
                    <a href="/Admin/Dashboard" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <span class="icon-box"><i class="bi bi-speedometer2"></i></span>
                        <span class="menu-text">Dashboard</span>
                    </a>
                </li>
                <li class="side-menu-item">
                    <a href="/Admin/Orders" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" ? "active" : "")">
                        <span class="icon-box"><i class="bi bi-list-ul"></i></span>
                        <span class="menu-text">Đơn hàng</span>
                    </a>
                </li>
                <li class="side-menu-item">
                    <a href="/Admin/FoodItems" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "FoodItems" ? "active" : "")">
                        <span class="icon-box"><i class="bi bi-egg-fried"></i></span>
                        <span class="menu-text">Món ăn</span>
                    </a>
                </li>
                <li class="side-menu-item">
                    <a href="/Admin/Categories" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categories" ? "active" : "")">
                        <span class="icon-box"><i class="bi bi-tags"></i></span>
                        <span class="menu-text">Danh mục</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <div class="side-menu-item">
                    <a href="/Identity/Account/Logout" title="Đăng xuất">
                        <span class="icon-box"><i class="bi bi-box-arrow-right"></i></span>
                        
                    </a>
                </div>
            </div>
        </nav>
        <!-- Main Content -->
        <main class="main-content flex-grow-1">
            <header class="admin-header d-flex justify-content-between align-items-center px-4 py-3 border-bottom">
                <span class="fw-bold text-accent">eFood Menu Admin</span>
                <div>
                    <span class="me-3"><i class="bi bi-person-circle"></i> @User.Identity?.Name</span>
                    <a href="/" class="btn btn-outline-light btn-sm">Về Website</a>
                </div>
            </header>
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>